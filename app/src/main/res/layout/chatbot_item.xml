<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_left_chat"
        android:padding="8dp"
        android:orientation="horizontal"
        android:id="@+id/left_chat_view"
        android:layout_marginEnd="80dp"
        >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chatbot_logo_image"
                android:layout_marginEnd="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_chat_text_view"
                android:textColor="@color/black"
                android:layout_marginStart="4dp"
                android:textSize="20sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_right_chat"
        android:padding="8dp"
        android:id="@+id/right_chat_view"
        android:layout_marginStart="80dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/right_chat_text_view"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/man_chatbot_image"
            android:layout_marginStart="3dp"
            />


    </LinearLayout>

</RelativeLayout>