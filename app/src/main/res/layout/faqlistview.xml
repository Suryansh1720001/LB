<?xml version="1.0" encoding="utf-8"?>
<!-- child_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:padding="16dp">

    <!-- Title for the answer -->
    <TextView
        android:id="@+id/answerTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Actual answer content -->
    <TextView
        android:id="@+id/answerContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="This is a sample answer text. Replace it with your answer."
        android:padding="8dp"/>

    <!-- Add any other elements you want in your answer layout -->

</LinearLayout>
